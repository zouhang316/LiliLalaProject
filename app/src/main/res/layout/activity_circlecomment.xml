<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <com.android.lala.view.CircleImageView
            android:id="@+id/head"
            android:layout_centerVertical="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/test"/>
        <TextView
            android:id="@+id/name"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/head"
            android:layout_marginLeft="10dp"
            android:textColor="@color/blue_name"
            android:textSize="15sp"
            android:text="追风者"
            />
        <TextView
            android:id="@+id/zan_num"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_zan"
            android:drawablePadding="5dp"
            android:layout_marginRight="5dp"
            android:text="7964"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black_font"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="起请问去起请问去起请问去起请问去起请问去起请问去起请问去起请问去"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:textSize="11sp"
            android:textColor="@color/view_line_color"
            android:text="4小时前"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/nomarl_divider"/>
        <TextView
            android:id="@+id/tv_allcomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="@color/black_font"
            android:visibility="gone"
            android:text="全部评论"/>
        <com.android.lala.view.MyListView
            android:focusable="false"
            android:id="@+id/circle_comment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null">
    </com.android.lala.view.MyListView>
    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/commentbackground">
        <TextView
            android:id="@+id/edit_btn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_toLeftOf="@+id/comment_num"
            android:background="@drawable/comment_shape"
            android:hint="说点什么..."
            android:textSize="13sp"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/nomarl_divider"/>
    </RelativeLayout>
</LinearLayout>