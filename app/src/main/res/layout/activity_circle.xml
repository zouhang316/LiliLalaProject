<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/circle_rbt_new"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="最新"/>
        <RadioButton
            android:id="@+id/circle_rbt_hot"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="最热"/>
        <RadioButton
            android:id="@+id/circle_rbt_featured"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="精选"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/indicator_new"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:background="@color/classf"/>
        <TextView
            android:id="@+id/indicator_hot"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:visibility="invisible"
            android:background="@color/classf"/>
        <TextView
            android:id="@+id/indicator_featured"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:visibility="invisible"
            android:background="@color/classf"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/circle_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>