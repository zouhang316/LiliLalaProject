<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

          <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/market_viewpage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:canLoop="true">
        </com.bigkoo.convenientbanner.ConvenientBanner>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/white"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_youxinhuo"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_tiyanguan"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_zhongchou"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_haodianyouli"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_qiandao"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="有新货"
                    android:textColor="@color/nomarl_title_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="体验馆"
                    android:textColor="@color/nomarl_title_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="众筹"
                    android:textColor="@color/nomarl_title_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="好店有礼"
                    android:textColor="@color/nomarl_title_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="签到"
                    android:textColor="@color/nomarl_title_color"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/nomarl_divider"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/market_xinhuo"
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/market_xinhuo"/>

                <TextView
                    android:id="@+id/market_text_xinhuo"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/market_xinhuo"
                    android:layout_alignBottom="@+id/market_xinhuo"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="有新货"
                    android:textColor="#FFA726"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/market_text_xinhuo"
                    android:layout_alignBottom="@+id/market_xinhuo"
                    android:layout_marginLeft="15dp"
                    android:text="每日10点上新"
                    android:textColor="@color/nomarl_title_color"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignBottom="@+id/market_xinhuo"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="更多"
                    android:textColor="#FFA726"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/newrecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/nomarl_divider"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/oldrecycleview"
                    android:layout_width="match_parent"
                    android:layout_height="1100dp"/>
</LinearLayout>

</ScrollView>
