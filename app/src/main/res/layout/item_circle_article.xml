<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="130dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/circle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/classf"
                android:text="#脑洞不能停"/>
            <TextView
                android:id="@+id/title"
                style="@style/NomorTitleStlye"
                android:layout_below="@+id/circle_name"
                android:maxLines="3"
                android:layout_marginTop="10dp"
                android:text="今天发现了一个超好玩的东西，大家都来看看" />
            <TextView
                android:id="@+id/author"
                style="@style/NomorFuTitleStyle"
                android:layout_alignParentBottom="true"
                android:text="小鱼儿"/>
            <TextView
                android:id="@+id/looknum"
                style="@style/NomorFuTitleStyle"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_eye"
                android:drawablePadding="5dp"
                android:text="1023"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/background"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:background="@color/defult_image_bg"
            android:layout_alignParentRight="true"/>
    </LinearLayout>

</LinearLayout>