<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <com.android.lala.view.CircleImageView
                android:id="@+id/item_hot_headimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/test" />
            <TextView
                android:id="@+id/item_hot_username"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/nomarl_title_color"
                android:text="米优酱"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_hot_background"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@color/defult_image_bg" />
        <TextView
            android:id="@+id/item_hot_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:lines="3"
            android:textColor="@color/nomarl_title_color"
            android:text="榴莲班戟"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/article_background"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/item_hot_looknum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:drawableLeft="@drawable/ic_eye"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:drawablePadding="5dp"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/article_background"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/item_hot_likenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:drawableLeft="@drawable/ic_zan"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:drawablePadding="5dp"/>
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>