<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
   android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/market_recycle_item_image"
            android:layout_height="130dp"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/defult_image_bg"/>

        <TextView
            android:id="@+id/market_recycle_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/market_recycle_item_image"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:lines="2"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="@color/nomarl_title_color"
            android:text="奇趣床头灯"/>

        <TextView
            android:id="@+id/market_recycle_item_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/market_recycle_item_title"
            android:layout_alignLeft="@+id/market_recycle_item_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/nomarl_title_color"
            android:text="¥"/>

        <TextView
            android:id="@+id/market_recycle_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/market_recycle_item_title"
            android:layout_alignLeft="@+id/market_recycle_item_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/nomarl_title_color"
            android:text="6"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>