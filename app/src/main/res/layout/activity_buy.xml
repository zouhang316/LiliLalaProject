<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:id="@+id/transition_buyactivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/transition"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/buy_viewpage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:canLoop="true">
            </com.bigkoo.convenientbanner.ConvenientBanner>
            <TextView
                android:id="@+id/market_buy_title"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="18sp"
                android:textColor="@color/nomarl_title_color"
                android:text="奇趣床头灯"/>

            <TextView
                android:id="@+id/market_buy_price"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="#555555"
                android:textStyle="bold"
                android:text="¥6"/>

            <TextView
                android:layout_height="1dp"
                android:layout_width="170dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:background="#dedede"/>

            <TextView
                android:id="@+id/market_buy_jianjie"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:textSize="12sp"
                />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#9e9e9e"
                    android:text="新度"/>
                <ImageView
                    android:id="@+id/xindu1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star"/>
                <ImageView
                    android:id="@+id/xindu2"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star"/>
                <ImageView
                    android:id="@+id/xindu3"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star"/>
                <ImageView
                    android:id="@+id/xindu4"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star"/>
                <ImageView
                    android:id="@+id/xindu5"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star"/>
            </LinearLayout>
            <TextView
                android:layout_height="10dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="#F0F0F2"/>
            <TextView
                android:id="@+id/buy_listnum"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="0人加入了购买清单"
                android:textSize="12sp"
                android:textColor="#9e9e9e"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>



            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/market_userhead_recycle"
                    android:focusable="false"
                    android:layout_height="35dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    >
                </android.support.v7.widget.RecyclerView>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_right"/>

            </LinearLayout>
            <TextView
                android:layout_height="10dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="#F0F0F2"/>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:text="评论"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="11dp"
                    android:src="@drawable/ic_right"/>


            </RelativeLayout>

            <com.android.lala.view.MyListView
                android:layout_marginTop="10dp"
                android:id="@+id/market_commentview"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                >
            </com.android.lala.view.MyListView>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_height="1dp"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="#F0F0F2"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="相关推荐"
                    />

                <TextView
                    android:layout_height="1dp"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:background="#F0F0F2"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/market_buy_recommend"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/buy_buylayout"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#F0F0F2" />

        <ImageView
            android:id="@+id/market_buy_lunxinicon"
            android:layout_height="16dp"
            android:layout_width="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_comment2"/>

        <TextView
            android:id="@+id/market_buy_lunxintext"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/market_buy_lunxinicon"
            android:layout_marginLeft="10dp"
            android:textColor="#7D7D7D"
            android:text="论新"/>

        <TextView
            android:id="@+id/market_buy_lunxinnum"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/market_buy_lunxintext"
            android:layout_marginLeft="10dp"
            android:textColor="#FF7043"
            android:textSize="12sp"
            android:text="0"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_zan"
            android:textColor="#7D7D7D"
            android:text="   +  清单"/>

        <Button
            android:id="@+id/buyactivity_buy"
            android:layout_height="30dp"
            android:layout_width="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/getcode_shape"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="购买"/>
    </RelativeLayout>
</LinearLayout>

