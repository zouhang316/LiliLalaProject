<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <com.android.lala.view.CircleImageView
        android:id="@+id/head"
        android:layout_centerVertical="true"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_defult_head"/>
    <TextView
        android:id="@+id/name"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/head"
        android:layout_marginLeft="10dp"
        android:textColor="@color/blue_name"
        android:textSize="15sp"
        android:text="追风者"
        />
    <TextView
        android:id="@+id/zan_num"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_zan"
        android:drawablePadding="5dp"
        android:textColor="@color/nomarl_grey_bg_color"
        android:layout_marginRight="5dp"
        android:text="7964"/>
</RelativeLayout>
    <TextView
        android:id="@+id/comment_content"
        style="@style/NomorTitleStlye"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:text="@string/feenback_text1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:textColor="@color/nomarl_grey_bg_color"
            android:textSize="11sp"
            android:text="4小时前"/>
        <TextView
            android:id="@+id/reply_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/nomarl_grey_bg_color"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>