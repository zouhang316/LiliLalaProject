<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchParent"
    android:background="@color/white_color">

    <ImageView
        android:id="@+id/cross"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/cross"
        android:layout_margin="10dp" />


    <RelativeLayout
        android:id="@+id/regall"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/reg_name_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:src="@mipmap/reg_name_icon" />
        <EditText
            android:id="@+id/reg_name_edit"
            android:layout_toRightOf="@+id/reg_name_icon"
            android:layout_alignTop="@+id/reg_name_icon"
            android:layout_alignBottom="@+id/reg_name_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:hint="设置您的昵称"
            android:singleLine="true"
            android:background="@null"  />
        <View
            android:id="@+id/mmm"
            android:layout_below="@+id/reg_name_icon"
            android:layout_alignParentLeft="true"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#bbbbbb" />

        <ImageView
            android:id="@+id/fsridicon"
            android:layout_alignParentLeft="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/mmm"
            android:src="@mipmap/password2" />

        <EditText
            android:id="@+id/et_password"
            android:layout_toRightOf="@+id/fsridicon"
            android:layout_alignTop="@+id/fsridicon"
            android:layout_alignBottom="@+id/fsridicon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="填写6~18位包含字母数字的密码"
            android:textSize="14sp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:background="@null"  />
        <View
            android:id="@+id/line5"
            android:layout_below="@+id/fsridicon"
            android:layout_alignParentLeft="true"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#bbbbbb" />


        <ImageView
            android:id="@+id/resrpasswordicon"
            android:layout_below="@+id/line5"
            android:layout_alignParentLeft="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:src="@mipmap/password2" />


        <EditText
            android:id="@+id/et_aglign_password"
            android:layout_toRightOf="@+id/resrpasswordicon"
            android:layout_alignTop="@+id/resrpasswordicon"
            android:layout_alignBottom="@+id/resrpasswordicon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="再次确认密码"
            android:textSize="14sp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:background="@null"  />


        <View
            android:id="@+id/line6"
            android:layout_below="@+id/resrpasswordicon"
            android:layout_alignParentLeft="true"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#bbbbbb" />
        <Button
            android:id="@+id/btn_finish"
            android:layout_below="@+id/line6"
            android:layout_alignParentLeft="true"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="完成注册"
            android:textSize="14sp"
            android:textColor="#FFF"
            android:layout_marginTop="20dp"
            android:background="@drawable/getcode_shape"/>




    </RelativeLayout>

</RelativeLayout>
