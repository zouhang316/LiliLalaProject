<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/personinfo_headview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/nomarl_title_color"
            android:layout_margin="15dp"
            android:text="头像"/>
        <View
            android:id="@+id/v1"
            android:layout_below="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/tv1"
            android:layout_height="1dp"
            android:background="#D9D9D9"/>

        <com.android.lala.view.CircleImageView
            android:id="@+id/personinfo_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv1"
            android:layout_marginRight="10dp"
            android:src="@mipmap/test" />
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_right"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/personinfo_nameview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/nomarl_title_color"
            android:layout_margin="12dp"
            android:text="昵称"/>
        <View
            android:id="@+id/v2"
            android:layout_below="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/tv2"
            android:layout_height="1dp"
            android:background="#D9D9D9"/>

        <TextView
            android:id="@+id/personinfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="#858585"
            android:layout_toLeftOf="@+id/iv2"
            android:text="米优酱" />
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_right"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/personinfo_phoneview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >
        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/nomarl_title_color"
            android:layout_margin="12dp"
            android:text="绑定手机号"/>
        <View
            android:id="@+id/v3"
            android:layout_below="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/tv4"
            android:layout_height="1dp"
            android:background="#D9D9D9"/>

        <TextView
            android:id="@+id/personinfo_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv3"
            android:textColor="#858585"
            android:text="13511149136" />
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_right"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >
        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/nomarl_title_color"
            android:layout_margin="12dp"
            android:text="签名"/>
        <View
            android:id="@+id/v4"
            android:layout_below="@+id/tv6"
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/tv6"
            android:layout_height="1dp"
            android:background="#D9D9D9"/>

        <TextView
            android:id="@+id/tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv4"
            android:textColor="#858585"
            android:text="谁开的脑洞，麻烦再开一个" />
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_right"/>

    </RelativeLayout>

</LinearLayout>